/* components/comment/index.wxss */
.wrap {
    display: flex;
	margin-bottom: 20rpx;
}

.head {
    height: 60rpx;
    width: 60rpx;
    border-radius: 50%;
}

.content {
    margin-left: 20rpx;
    padding-bottom: 20rpx; 
    border-bottom: 1px solid #f5f5f5;
}

.username-box {
    display: flex;
    justify-content: space-between;
}

.username {
    font-size: 32rpx;
    font-weight: bold;
}

.time {
    font-size: 28rpx;
    color: #ccc;
}

.com-comment {
    margin-top: 10rpx;
    line-height: 42rpx;
}