<!--pages/beShoper/index.wxml-->
<form
	bindsubmit="formSubmit"
>
	<view class="InfoForm">
		<view class="item">
		<view class="">姓名</view>
		<input name="name" placeholder="请输入真实姓名"></input>
		</view>

		<view class="item">
		<view class="">身份证号</view>
		<input placeholder="请输入身份证号" name="idCard"></input>
		</view>

		<view class="item">
		<view class="">手机号</view>
		<input placeholder="请输入手机号" name="phone"></input>
		</view>

		<view class="item">
		<button bindtap="upImgClick" data-num="0">上传营业执照</button>
		<image src='{{config.imgBase + imgUrl0}}'></image>
		<button bindtap="upImgClick" data-num="1">上传身份证正面</button>
		<image src='{{config.imgBase + imgUrl1}}'></image> 
		<button bindtap="upImgClick" data-num="2">上传身份证反面</button>
		<image src='{{config.imgBase + imgUrl2}}'></image> 
		<button bindtap="upImgClick" data-num="3">上传手持身份证</button>
		<image src='{{config.imgBase + imgUrl3}}'></image> 
		</view>
	</view>
	<button class="apply" formType="submit">确定提交</button>
</form>



	
	