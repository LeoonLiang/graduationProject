page {
 background-color: #f5f5f5;
}

.padding {
  padding: 0 20rpx;
}

.contentbox {
  background-color: #fff;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-radius: 20rpx;
}

.title {
  padding-left: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}
.title::before {
  content: "";
  display: inline-block;
  width: 6rpx;
  height: 36rpx;
  background-color: #1D61D4;
  margin-right: 20rpx; 
}

.topbar {
  height: 84rpx;
  background-color: #fff;
  padding-left: 20rpx;
  line-height: 60rpx;
  color: #fff;
  display: flex;
  align-items: center;
}

.classifBar {
  display: flex;
  padding: 10rpx 0;
  flex-direction: row;
  flex-wrap: wrap;
  /* justify-content: center; */
  margin-bottom: 30rpx;
}

.placeList {
  margin-top: 10rpx;
  padding-bottom: 20rpx;
}
