/* pages/orderDetail/index.wxss */


.page-title {
    padding-left: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 44rpx;
    font-weight: bold;
    background-color: #fff;
    margin-bottom: 30rpx;
}

.message {
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
    color: #ccc;
    border-top:1px solid #e5e5e5;
    border-bottom:1px solid #e5e5e5; 
    font-size: 24rpx;
}

.content {
    background-color: #fff;
    display: flex;
    padding: 0 30rpx;
    height: 240rpx;
    align-items: center;
}

.content .detail {
    height: 160rpx;
    box-sizing: border-box;
}

.place-img {
    width: 200rpx;
    height: 160rpx;
    margin-right: 20rpx;
}

.place-name {
    font-size: 36rpx;
   /* font-weight: bold; */
   margin-bottom: 10rpx;
}

.pos {
    font-size: 24rpx;
    color: #666;
}

.order {
    padding: 30rpx 0;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;

    background-color: #fff;
    padding-left: 30rpx;
}

.order-time {
    /* font-weight: bold; */
    font-size: 48rpx;
    margin-bottom: 10rpx;
}

.order .total {
    padding: 5rpx 0;
}

.price-box {
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    background-color: #fff;
}

.price-box .price {
    color: #3484fd;
}

.book-bottom {
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    height: 120rpx;
    background-color: #fff;
    z-index: 999;
    width: 100%;
    line-height: 120rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #ccc; 
}

.book-bottom .price {
    flex: 3;
    padding-left: 20rpx;
    font-size: 40rpx;
    color: #f8e71c;
}

.book-bottom .btn {
    flex:2;
    background-color: #3484FD;
    color:#fff;
    text-align: center;
    font-size: 32rpx;
}