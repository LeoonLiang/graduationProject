/* pages/placeDetail/index.wxss */
page {
  padding: 0 20rpx;
  box-sizing: border-box; 
  background-color: #f5f5f5;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.banner {
  border-radius: 10rpx;
}

.content {
  padding: 20rpx;
  margin: 20rpx 0;
  position: relative;
  background-color: #fff;
  border-radius: 10rpx;
}

.main {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: bold;
}


.star {
  color: #f8e71c;
  margin: 15rpx 0;
}

.price-box {
  color: #ccc;
  font-size: 28rpx;
 
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #3484FD;
}

.img-pos {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}


.center {
  display: flex;
  align-items: center;
  margin: 15rpx 0;
  /* padding: 0 20rpx; */
}

.phone {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: 35rpx;
  right: 20rpx;
}

.com-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.session-box {
  margin: 20rpx 0;
  height: 150rpx;
  width: 100%;
  white-space: nowrap;  
}

.session {
  display: inline-block;
  text-align: center;
  background-color: #fff;
  padding:10rpx 50rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  /* width: 80rpx; */
}

.session view {
  margin: 10rpx 0;
}

.session .button {
  color: #3484FD;
}