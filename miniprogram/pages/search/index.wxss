/* pages/search/index.wxss */
page {
    background: #fff;
}
.top-search {
    background-color: #fff;
    height: 100rpx;

    border-top:2rpx solid #e5e5e5;
    border-bottom: 2rpx solid #e5e5e5;  
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
}

.search-box {
    display: flex;
    align-items: center;
    background-color: #f5f5f5;
    flex:2;
    margin-right: 20rpx;
    height: 70rpx;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    position: relative;
}

.input-box {
    flex:1;
    padding: 0 10rpx;
    line-height: 70rpx;
}

.his-box {
    margin-top: 30rpx;
    padding: 0 30rpx;
}

.his {
    font-size: 36rpx;
    margin-bottom: 20rpx;
}

.tag {
    display: inline-block;
    width: auto;
    background-color: #e5e5e5;
    font-size: 28rpx;
    padding: 10rpx 20rpx;
    border-radius: 15rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}